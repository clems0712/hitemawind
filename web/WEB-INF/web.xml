<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>stock.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>servlet.Home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestStock</servlet-name>
        <servlet-class>servlet.TestStock</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Products</servlet-name>
        <servlet-class>servlet.ProductsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Suppliers</servlet-name>
        <servlet-class>servlet.SuppliersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PurchaseOrders</servlet-name>
        <servlet-class>servlet.PurchaseOrders</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PurchaseOrderDetails</servlet-name>
        <servlet-class>servlet.PurchaseOrderDetails</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestStock</servlet-name>
        <url-pattern>/TestStock</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Products</servlet-name>
        <url-pattern>/Products</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Suppliers</servlet-name>
        <url-pattern>/Suppliers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PurchaseOrders</servlet-name>
        <url-pattern>/PurchaseOrders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PurchaseOrderDetails</servlet-name>
        <url-pattern>/PurchaseOrderDetails</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
